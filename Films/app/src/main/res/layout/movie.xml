<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/movie">


    <LinearLayout
        style="@style/linearParent"
        android:layout_gravity="center"
        android:padding="@dimen/loginViewsMargin"
        android:background="@drawable/my_custom_background"
        android:layout_marginBottom="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/poster"
                android:textSize="20sp"
                android:layout_width="120dp"
                android:layout_height="140sp"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/headerText_title"
                    android:id="@+id/title"
                    android:text="title"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/original_title"
                    android:text="original_title"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    style="@style/modifiedEditText"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/genres"
                    android:text="genre"

                    style="@style/modifiedEditText"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="release_date"
                    android:id="@+id/release_date"
                    style="@style/modifiedEditText"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="popularity"
                    android:id="@+id/popularity"
                    style="@style/modifiedEditText"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/star"
                        android:layout_marginLeft="10dp"
                        android:layout_width="90dp"
                        android:layout_height="20dp"
                        android:background="#fff"
                        style="@style/text_header2"
                        android:drawableLeft="@drawable/ic_star"
                        android:onClick="addToFav"
                        android:text="id"
                        />

                    <Button
                        android:id="@+id/simpleButton2"
                        android:layout_marginLeft="10dp"
                        android:layout_width="90dp"
                        android:layout_height="20dp"
                        android:background="#fff"
                        style="@style/text_header2"
                        android:drawableLeft="@drawable/ic_view"
                        android:text="id"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/id"
                    android:layout_width="55dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="#fff"
                    style="@style/text_header2"
                    android:onClick="goToFilm"
                    android:textColor="#00000000"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="overview"
            android:id="@+id/overview"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</LinearLayout>